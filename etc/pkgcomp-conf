EXTRA_MKCONF="/home/schmonz/trees/package-rebuild/etc/pkgcomp-extramkconf"
SANDBOX_CONFFILE="/home/schmonz/trees/package-rebuild/etc/pkgcomp-sandboxconf"

UPDATE_SOURCES=false

# Schmonzy business.
VINTAGE="$(date -u '+%Y%m%d-%H%M%S')"

# Host file layout.
PKGSRCDIR="/home/schmonz/trees/pkgsrc-current"
DISTDIR="${PKGSRCDIR}/distfiles"
PACKAGES="/home/schmonz/binaries/packages/$(uname -r)-$(uname -m)-${VINTAGE}"
PBULK_LOG="${PACKAGES}/log"
PBULK_PACKAGES="${PACKAGES}/pbulk"

# Target file layout.
LOCALBASE="/opt/.pkg-${VINTAGE}"
PKG_DBDIR="${LOCALBASE}/pkgdb"
SYSCONFDIR="/etc"
VARBASE="/var"

# List of packages to build during automatic execution.
AUTO_PACKAGES="$(grep -v '^#' '/home/schmonz/trees/package-rebuild/etc/pkgcomp-autopackages')"
