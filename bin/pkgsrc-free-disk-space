#!/bin/sh

case "$(uname)" in
Linux)
sudo dd if=/dev/zero of=/var/tmp/zeroes bs=1M count=999999999; sudo rm -f /var/tmp/zeroes
	;;
NetBSD|FreeBSD)
sudo dd if=/dev/zero of=/var/tmp/zeroes bs=1m count=999999999; sudo rm -f /var/tmp/zeroes
	;;
Tribblix)
sudo rm -f ~schmonz/trees/pkgsrc/packages/All/* ~schmonz/trees/pkgsrc/distfiles/*
sudo dd if=/dev/zero of=/var/tmp/zeroes bs=1M count=999999999; sudo rm -f /var/tmp/zeroes
	;;
esac
