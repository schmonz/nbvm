#!/bin/sh

# https://wiki.netbsd.org/ports/qemu_riscv/

main() {
	QEMU_ARCH=riscv64
	QEMU_DISK=netbsd-riscv64.qcow2
	QEMU_PORT=2235
	QEMU_CPUS=1
	QEMU_RAMS=1g	# OS can't use more yet


	exec qemu-system-${QEMU_ARCH} \
		-M virt \
		-smp ${QEMU_CPUS} \
		-m ${QEMU_RAMS} \
		-kernel netbsd-riscv64-GENERIC64 \
		-drive if=none,file=${QEMU_DISK},id=hd0 \
		-device virtio-blk-device,drive=hd0 \
		-device virtio-rng-device \
		-netdev type=user,id=net0,hostfwd=tcp::${QEMU_PORT}-:22,ipv6=off \
		-device virtio-net-device,netdev=net0,mac=02:3f:aa:85:6d:3e \
		-append "root=dk1" \
		-nographic \
		"$@"
}

cd "$(dirname "$(realpath "$0")")"/../var/disks
main "$@"
exit $?
