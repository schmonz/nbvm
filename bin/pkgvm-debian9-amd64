#!/bin/sh

main() {
	QEMU_ARCH=x86_64
	QEMU_DISK=debian9-amd64.qcow2
	QEMU_PORT=7777
	QEMU_CPUS=1
	QEMU_RAMS=1536


	exec qemu-system-${QEMU_ARCH} \
		-nographic \
		-machine type=q35,accel=hvf \
		-cpu Nehalem \
		-smp ${QEMU_CPUS} \
		-m ${QEMU_RAMS} \
		-nic user,mac=02:0d:42:66:a3:52,model=virtio,hostfwd=tcp::${QEMU_PORT}-:22,ipv6=off \
		-drive file=${QEMU_DISK},if=virtio,format=qcow2,index=0 \
		"$@"
}

#		-serial mon:stdio \

cd "$(dirname "$(realpath "$0")")"/../var/disks
main "$@"
exit $?
