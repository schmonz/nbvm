#!/bin/sh

set -e

dmesg_says_qemu() {
	sudo dmesg | grep -qi qemu
}

var_adm_messages_says_qemu() {
	[ -f /var/adm/messages ] && grep -qi qemu /var/adm/messages
}

main() {
	dmesg_says_qemu && return 0
	var_adm_messages_says_qemu && return 0
	[ "$#" -gt 0 ] && [ "$1" = "pkgvm" ] && return 0

	echo >&2 "'pkgvm' not specified"
	return 1
}

main "$@"
exit $?
