#!/bin/sh

# https://wiki.netbsd.org/ports/evbarm/qemu_arm/

main() {
	QEMU_ARCH=arm
	QEMU_DISK=netbsd-armv7.qcow2
	QEMU_PORT=2232
	QEMU_CPUS=4
	QEMU_RAMS=1G

	qemu-disk-create-if-needed "${QEMU_DISK}"

	exec qemu-system-${QEMU_ARCH} \
		-M virt \
		-cpu cortex-a15 \
		-smp ${QEMU_CPUS} \
		-m ${QEMU_RAMS} \
		-drive if=none,file=${QEMU_DISK},id=hd0 -device virtio-blk-device,drive=hd0 \
		-nic user,mac=02:85:a1:51:a2:ef,model=virtio,hostfwd=tcp::${QEMU_PORT}-:22,ipv6=off \
		-bios netbsd9-armv7-qemu-efi.fd \
		-nographic
}

cd "$(dirname "$0")"/../var/disks
main "$@"
exit $?
