#!/bin/sh

vbox_is_running() {
	count=$(VBoxManage showvminfo "$1" | grep -c 'running (since')
	[ 0 -lt $count ]
}

vbox_start_if_needed() {
	vbox_is_running "$1" || VBoxManage startvm "$1" --type headless
}

ALL_VBOXES='
centos6		CentOS 6
centos7		CentOS 7
debian9		Debian 9
debian10	Debian 10
devuan		Devuan
freebsd		FreeBSD
netbsd8		NetBSD 8
netbsd9		NetBSD 9
netbsd_current	NetBSD-current
openbsd		OpenBSD
osxserver	OS X Server
philo		Philo DreamHost
tribblix	Tribblix
ubuntu16	Ubuntu 16
ubuntu18	Ubuntu 18
void		Void Linux
'

longname_for() {
	local _shortname
	_shortname="$1"
	echo "${ALL_VBOXES}" \
		| grep -- "^${_shortname}\s" \
		| sed -e "s|^${_shortname}[[:space:]]*||g"
}

ssh_retry_until_success() {
	false
	until [ 0 -eq $? ]; do
		sleep 1
		ssh -q "$@" true || false
	done
	ssh -q "$@"
}

main() {
	local _shortname _longname
	_shortname="$1"
	_longname="$(longname_for ${_shortname})"
	if [ -z "${_longname}" ]; then
		echo "unknown VM: ${_shortname}" >&2
		exit 77
	else
		vbox_start_if_needed "${_longname}"
		ssh_retry_until_success "${_shortname}"
	fi
}

main "$@"
exit $?
