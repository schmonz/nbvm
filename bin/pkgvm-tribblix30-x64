main() {
	QEMU_ARCH=x86_64
	QEMU_DISK=tribblix-x64.qcow2
	QEMU_PORT=4444
	QEMU_CPUS=1
	QEMU_RAMS=1536

	qemu-disk-create-if-needed "${QEMU_DISK}"

	exec qemu-system-${QEMU_ARCH} \
		-machine accel=hvf,hpet=off \
		-smp ${QEMU_CPUS} \
		-m ${QEMU_RAMS} \
		-drive file=${QEMU_DISK},if=virtio,format=qcow2,index=0 \
		-nic user,mac=02:c6:70:53:0d:94,model=virtio,hostfwd=tcp::${QEMU_PORT}-:22,ipv6=off \
		-nographic \
		"$@"
}

cd "$(dirname "$0")"/../var/disks
main "$@"
exit $?
