#!/bin/sh

_myname=$(hostname)

if [ -z "$1" ] || [ "$1" != "vbox" ]; then
	echo >&2 "${_myname}: 'vbox' arg not specified"
	exit 0
else
	echo >&2 "${_myname}: shutting down"
	exit 0
fi

case "$(uname)" in
Darwin|Linux)
	sudo shutdown -h now
	;;
NetBSD|OpenBSD)
	sudo shutdown -hp now
	;;
FreeBSD)
	sudo shutdown -p now
	;;
SunOS)
	sudo shutdown -y -i 5 -g 0
	;;
esac
