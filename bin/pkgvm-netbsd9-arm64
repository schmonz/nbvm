#!/bin/sh

# https://gmplib.org/~tege/qemu.html#arm64-netbsd
# https://wiki.netbsd.org/ports/evbarm/qemu_arm/

main() {
	QEMU_ARCH=aarch64
	QEMU_DISK=netbsd9-arm64.qcow2
	QEMU_PORT=2236
	QEMU_CPUS=4
	QEMU_RAMS=1g
	QEMU_ENET=02:09:ea:74:19:ce

	exec qemu-system-${QEMU_ARCH} \
		-machine virt \
		-cpu cortex-a53 \
		-smp ${QEMU_CPUS} \
		-m ${QEMU_RAMS} \
		-drive if=none,file=${QEMU_DISK},id=hd0 \
		-device virtio-blk-device,drive=hd0 \
		-nic user,mac=${QEMU_ENET},model=virtio,hostfwd=tcp::${QEMU_PORT}-:22,ipv6=off \
		-device virtio-rng-pci \
		-bios netbsd9-arm64-qemu-efi.fd \
		-nographic \
		"$@"
}

cd "$(dirname "$(realpath "$0")")"/../var/disks
main "$@"
exit $?

