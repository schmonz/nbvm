#!/bin/sh

main() {
	QEMU_ARCH=x86_64
	QEMU_DISK=openbsd73-amd64.qcow2
	QEMU_PORT=2323
	QEMU_CPUS=1
	QEMU_RAMS=2g


	exec qemu-system-${QEMU_ARCH} \
		-M accel=hvf --cpu host \
		-smp ${QEMU_CPUS} \
		-m ${QEMU_RAMS} \
		-nographic \
		-no-fd-bootchk \
		-nic user,mac=02:f3:73:2f:50:65,model=virtio,hostfwd=tcp::${QEMU_PORT}-:22,ipv6=off \
		-drive file=${QEMU_DISK},if=virtio,format=qcow2,index=0 \
		"$@"
}

cd "$(dirname "$(realpath "$0")")"/../var/disks
main "$@"
exit $?
