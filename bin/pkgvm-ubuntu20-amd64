#!/bin/sh

# https://www.arthurkoziel.com/qemu-ubuntu-20-04/

main() {
	QEMU_ARCH=x86_64
	QEMU_DISK=ubuntu20-amd64.qcow2
	QEMU_PORT=2234
	QEMU_CPUS=1
	QEMU_RAMS=512
	QEMU_ENET=02:a4:43:73:66:a7
	QEMU_MCNE=q35
	QEMU_BIOS=

	exec qemu-system-${QEMU_ARCH} \
		-machine ${QEMU_MCNE},accel=hvf \
		-cpu host \
		-smp ${QEMU_CPUS} \
		-m ${QEMU_RAMS} \
		-nic user,mac=${QEMU_ENET},model=virtio,hostfwd=tcp::${QEMU_PORT}-:22,ipv6=off \
		-drive file=${QEMU_DISK},if=virtio,format=qcow2,index=0 \
		-nographic \
		"$@"
}

#		-serial mon:stdio \

cd "$(dirname "$(realpath "$0")")"/../var/disks
main "$@"
exit $?
